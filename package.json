{
  "name": "ReplayWeb.page",
  "version": "1.0.0",
  "description": "Serverless Web Archive Replay",
  "main": "dist/electron.js",
  "repository": "https://github.com/webrecorder/replayweb.page",
  "author": "Ilya Kreymer <ikreymer@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "bulma": "^0.8.2",
    "lit-element": "^2.3.1",
    "marked": "^1.0.0",
    "pretty-bytes": "^5.3.0",
    "register-service-worker": "^1.7.1",
    "wabac": "github:https://github.com/webrecorder/wabac.js",
    "wombat": "github:https://github.com/webrecorder/wombat"
  },
  "devDependencies": {
    "css-loader": "^3.5.3",
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1",
    "electron-notarize": "^0.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "raw-loader": "^4.0.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "svg-inline-loader": "^0.8.2",
    "to-string-loader": "^1.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "build": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "start-dev": "webpack-dev-server --mode development",
    "pack": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish never",
    "dist": "electron-builder",
    "start-electron": "NODE_ENV=development electron ./dist/electron.js",
    "build-electron": "yarn run build && yarn run pack"
  },
  "build": {
    "afterSign": "build/notarize.js",
    "productName": "ReplayWeb.page",
    "asar": true,
    "appId": "net.webrecorder.replaywebpage",
    "artifactName": "${name}-${version}.${ext}",
    "files": [
      "!**/*",
      "!**/node_modules/**/*",
      "package.json",
      "dist/*.js",
      "docs/*.js",
      "docs/index.html"
    ],
    "extraResources": [
      "plugins"
    ],
    "dmg": {},
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "category": "Archiving;Utility;",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "portable"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "fileAssociations": [
      {
        "ext": "warc",
        "name": "WARC File",
        "description": "WARC File",
        "role": "Viewer"
      },
      {
        "ext": "warc.gz",
        "name": "WARC File",
        "description": "WARC File",
        "role": "Viewer"
      },
      {
        "ext": "har",
        "name": "HAR File",
        "description": "HAR File",
        "role": "Viewer"
      }
    ]
  }
}
