{
  "name": "replaywebpage",
  "productName": "ReplayWeb.page",
  "version": "1.1.0-alpha.0",
  "description": "Serverless Web Archive Replay",
  "repository": "https://github.com/webrecorder/replayweb.page",
  "homepage": "https://replayweb.page/",
  "author": "Ilya Kreymer <ikreymer@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@webrecorder/wabac": "github:webrecorder/wabac.js#kiwix",
    "bulma": "^0.8.2",
    "flexsearch": "^0.6.32",
    "keyword-mark-element": "^0.1.2",
    "lit-element": "^2.3.1",
    "marked": "^1.0.0",
    "mime-types": "^2.1.27",
    "pretty-bytes": "^5.3.0",
    "register-service-worker": "^1.7.1"
  },
  "devDependencies": {
    "css-loader": "^3.5.3",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "electron-notarize": "^1.0.0",
    "http-server": "^0.12.3",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "raw-loader": "^4.0.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "svg-inline-loader": "^0.8.2",
    "to-string-loader": "^1.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "files": [
    "/src",
    "sw.js",
    "ui.js",
    "index.html"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "build-docs": "bundle install; bundle exec jekyll build",
    "start-dev": "webpack-dev-server --mode development",
    "start-prod": "http-server -p 9990",
    "pack": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish never",
    "pack-signed": "electron-builder",
    "start-electron": "NODE_ENV=development electron ./dist/electron.js",
    "start-jekyll": "yarn run build-docs && bundle exec jekyll serve",
    "dist": "yarn run build && yarn run pack",
    "release": "yarn run build && electron-builder"
  },
  "build": {
    "afterSign": "build/notarize.js",
    "productName": "ReplayWeb.page",
    "asar": true,
    "appId": "net.webrecorder.replaywebpage",
    "artifactName": "${productName}-${version}.${ext}",
    "extraMetadata": {
      "main": "dist/electron.js"
    },
    "files": [
      "!**/node_modules/**/*",
      "dist/*.js",
      "*.js",
      "*.html",
      {
        "from": "_site/assets",
        "to": "assets"
      }
    ],
    "dmg": {
      "title": "ReplayWeb.page"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "electronLanguages": [
        "en"
      ],
      "extraResources": [
        "plugins-mac"
      ]
    },
    "linux": {
      "category": "Archiving;Utility;",
      "target": [
        "AppImage"
      ],
      "extraResources": [
        "plugins-linux"
      ]
    },
    "win": {
      "target": "portable",
      "extraResources": [
        "plugins-win"
      ]
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "fileAssociations": [
      {
        "ext": "warc",
        "name": "WARC File",
        "description": "WARC File",
        "role": "Viewer"
      },
      {
        "ext": "warc.gz",
        "name": "WARC File",
        "description": "WARC File",
        "role": "Viewer"
      },
      {
        "ext": "har",
        "name": "HAR File",
        "description": "HAR File",
        "role": "Viewer"
      }
    ]
  }
}
